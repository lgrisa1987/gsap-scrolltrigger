---
import { gsap } from "gsap";
---

<section class="section flex-center">
  <h1 class="text-[20vw] overflow-hidden opacity-0" id="main-title">Scrolle√°</h1>
</section>

<script>
  import { getLetters, textAnimation } from "../utils";
  const title = document.querySelector("#main-title") as HTMLElement;

  title.innerHTML = getLetters(title);

  gsap.set(title, { autoAlpha: 1 });
  gsap.to("#main-title span", textAnimation(0.5));
</script>
